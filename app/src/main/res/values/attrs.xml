<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom attributes for the app -->
    <attr name="customTheme" format="reference" />
    <attr name="customColor" format="color" />
    <attr name="customDimension" format="dimension" />
    <attr name="customBoolean" format="boolean" />
    <attr name="customString" format="string" />
    <attr name="customInteger" format="integer" />
    <attr name="customFloat" format="float" />
    <attr name="customReference" format="reference" />
    <attr name="customEnum" format="enum">
        <enum name="value1" value="1" />
        <enum name="value2" value="2" />
    </attr>
    
    <!-- Дополнительные атрибуты для исправления ошибок -->
    <attr name="bar_gravity" format="enum">
        <enum name="top" value="0" />
        <enum name="bottom" value="1" />
    </attr>
    <attr name="bar_height" format="dimension" />
    <attr name="scrubber_dragged_size" format="dimension" />
    <attr name="scrubber_enabled_size" format="dimension" />
    <attr name="touch_target_height" format="dimension" />
    <attr name="enforceNavigationBarContrast" format="boolean" />
    <attr name="tone" format="float" />
</resources>